<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="project.sk.robocode3.robot_project">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <!-- 개발용  run 돌아가게 하는 용도->apk추출안해도 되게 해줌 -->
                <category android:name="android.intent.category.LAUNCHER" />
                <!-- 런쳐 안으로 들어가게 해주는 용도 -->
                <category android:name="org.smartrobot.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="org.roboid.hardware.id"
                android:value="kr.robomation.physical.albert.uo" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".StartActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".StudyActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".TravelStartActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".SelectActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".QuizActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".TempActivity"></activity>
    </application>

</manifest>